{
	"name": "bootty",
	"displayName": "BooTTY",
	"description": "Alternative terminal for VS Code powered by Ghostty's terminal emulation (libghostty-vt) via WebAssembly",
	"version": "0.3.6",
	"publisher": "bigboss",
	"license": "MIT",
	"icon": "images/icon.png",
	"repository": {
		"type": "git",
		"url": "https://github.com/0xBigBoss/vscode-bootty.git"
	},
	"bugs": {
		"url": "https://github.com/0xBigBoss/vscode-bootty/issues"
	},
	"homepage": "https://github.com/0xBigBoss/vscode-bootty#readme",
	"engines": {
		"vscode": "^1.106.0"
	},
	"extensionKind": [
		"workspace"
	],
	"categories": [
		"Other",
		"Programming Languages"
	],
	"activationEvents": [
		"onView:boottyTerminalPanel",
		"onCommand:bootty.newTerminal",
		"onCommand:bootty.newTerminalInEditor",
		"onCommand:bootty.newTerminalInPanel",
		"onCommand:bootty.togglePanel",
		"onCommand:bootty.newTerminalHere",
		"onCommand:bootty.nextTab",
		"onCommand:bootty.previousTab"
	],
	"main": "./out/extension.js",
	"contributes": {
		"viewsContainers": {
			"panel": [
				{
					"id": "bootty-terminal-panel",
					"title": "BooTTY",
					"icon": "$(terminal)"
				}
			]
		},
		"views": {
			"bootty-terminal-panel": [
				{
					"id": "boottyTerminalPanel",
					"name": "Terminal",
					"type": "webview"
				}
			]
		},
		"commands": [
			{
				"command": "bootty.newTerminal",
				"title": "BooTTY: New Terminal"
			},
			{
				"command": "bootty.newTerminalInEditor",
				"title": "BooTTY: New Terminal in Editor"
			},
			{
				"command": "bootty.newTerminalInPanel",
				"title": "BooTTY: New Terminal in Panel",
				"icon": "$(plus)"
			},
			{
				"command": "bootty.togglePanel",
				"title": "BooTTY: Toggle Terminal Panel"
			},
			{
				"command": "bootty.newTerminalHere",
				"title": "BooTTY: New Terminal Here"
			},
			{
				"command": "bootty.nextTab",
				"title": "BooTTY: Next Terminal Tab"
			},
			{
				"command": "bootty.previousTab",
				"title": "BooTTY: Previous Terminal Tab"
			},
			{
				"command": "bootty.search",
				"title": "BooTTY: Find in Terminal"
			},
			{
				"command": "bootty.splitTerminal",
				"title": "BooTTY: Split Terminal",
				"icon": "$(split-horizontal)"
			}
		],
		"menus": {
			"explorer/context": [
				{
					"command": "bootty.newTerminalHere",
					"group": "navigation"
				}
			]
		},
		"configuration": {
			"title": "BooTTY",
			"properties": {
				"bootty.fontFamily": {
					"type": "string",
					"default": "",
					"description": "Font family for BooTTY. Leave empty to use editor.fontFamily."
				},
				"bootty.fontSize": {
					"type": "number",
					"default": 0,
					"minimum": 6,
					"maximum": 72,
					"description": "Font size in pixels. Set to 0 to use editor.fontSize."
				},
				"bootty.defaultTerminalLocation": {
					"type": "string",
					"enum": [
						"panel",
						"editor"
					],
					"default": "panel",
					"description": "Where new terminals open by default"
				},
				"bootty.bell": {
					"type": "string",
					"enum": [
						"visual",
						"none"
					],
					"default": "visual",
					"description": "Bell notification style. 'visual' shows a flash and status bar notification, 'none' disables all bell feedback."
				},
				"bootty.notifications": {
					"type": "boolean",
					"default": true,
					"description": "Show VS Code notifications from terminal applications (OSC 9 escape sequences)."
				}
			}
		},
		"keybindings": [
			{
				"command": "-workbench.action.terminal.toggleTerminal",
				"key": "ctrl+`"
			},
			{
				"command": "-workbench.action.terminal.new",
				"key": "ctrl+shift+`"
			},
			{
				"command": "-actions.find",
				"key": "cmd+f",
				"when": "focusedView == 'boottyTerminalPanel'"
			},
			{
				"command": "-actions.find",
				"key": "ctrl+f",
				"when": "focusedView == 'boottyTerminalPanel'"
			},
			{
				"command": "-actions.find",
				"key": "cmd+f",
				"when": "activeWebviewPanelId == 'boottyTerminal'"
			},
			{
				"command": "-actions.find",
				"key": "ctrl+f",
				"when": "activeWebviewPanelId == 'boottyTerminal'"
			},
			{
				"command": "-workbench.action.nextEditor",
				"key": "cmd+shift+]",
				"when": "focusedView == 'boottyTerminalPanel'"
			},
			{
				"command": "-workbench.action.previousEditor",
				"key": "cmd+shift+[",
				"when": "focusedView == 'boottyTerminalPanel'"
			},
			{
				"command": "bootty.togglePanel",
				"key": "ctrl+`"
			},
			{
				"command": "bootty.newTerminal",
				"key": "ctrl+shift+`"
			},
			{
				"command": "bootty.newTerminalInPanel",
				"key": "ctrl+shift+t",
				"mac": "cmd+shift+t"
			},
			{
				"command": "bootty.nextTab",
				"key": "ctrl+shift+]",
				"mac": "cmd+shift+]",
				"when": "focusedView == 'boottyTerminalPanel'"
			},
			{
				"command": "bootty.previousTab",
				"key": "ctrl+shift+[",
				"mac": "cmd+shift+[",
				"when": "focusedView == 'boottyTerminalPanel'"
			},
			{
				"command": "bootty.search",
				"key": "ctrl+f",
				"mac": "cmd+f",
				"when": "focusedView == 'boottyTerminalPanel'"
			},
			{
				"command": "bootty.search",
				"key": "ctrl+f",
				"mac": "cmd+f",
				"when": "activeWebviewPanelId == 'boottyTerminal'"
			},
			{
				"command": "bootty.splitTerminal",
				"key": "ctrl+\\",
				"mac": "cmd+\\",
				"when": "focusedView == 'boottyTerminalPanel'"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "node scripts/check-prebuilds.mjs && npm run build:prod",
		"compile": "tsgo -p ./",
		"build": "node esbuild.config.mjs",
		"build:prod": "NODE_ENV=production node esbuild.config.mjs",
		"dev": "node esbuild.config.mjs --watch",
		"watch": "node esbuild.config.mjs --watch",
		"typecheck": "tsgo --noEmit",
		"lint": "biome check .",
		"lint:fix": "biome check --write .",
		"format": "biome format --write .",
		"jscpd": "jscpd src --min-lines 10 --min-tokens 50",
		"knip": "knip",
		"test": "vitest run",
		"test:watch": "vitest",
		"build:native": "node scripts/build-native.mjs",
		"postinstall": "chmod +x node_modules/node-pty/prebuilds/darwin-*/spawn-helper 2>/dev/null || true"
	},
	"dependencies": {
		"@0xbigboss/ghostty-web": "^0.5.0",
		"@vscode/codicons": "^0.0.44",
		"node-pty": "^1.0.0"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.11",
		"@types/node": "^22.0.0",
		"@types/vscode": "^1.106.0",
		"@typescript/native-preview": "^7.0.0-dev.20260105.1",
		"esbuild": "^0.27.2",
		"jscpd": "^4.0.5",
		"knip": "^5.80.0",
		"lefthook": "^2.0.13",
		"vitest": "^4.0.16"
	}
}
